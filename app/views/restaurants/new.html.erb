<p>Make a new restaurant</p>
  <%= simple_form_for(@restaurant) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category %>
    </div>

    <div class="form-actions">
      <%= f.submit %>
    </div>
<% end %>
